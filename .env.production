# Production Environment Variables
# DO NOT COMMIT THIS FILE TO VERSION CONTROL

# API Configuration
API_URL=https://ai-fitness-api.onrender.com
ADMIN_API_URL=https://ai-fitness-admin-api.onrender.com
NOTIFICATION_SERVICE_URL=https://ai-fitness-notifications.onrender.com

# Database (PostgreSQL on Render.com free tier)
DATABASE_URL=postgres://ai_fitness_user:password@dpg-xxxxx/ai_fitness_coach
DATABASE_HOST=dpg-xxxxx-a.oregon-postgres.render.com
DATABASE_PORT=5432
DATABASE_NAME=ai_fitness_coach
DATABASE_USER=ai_fitness_user
DATABASE_PASSWORD=auto-generated-by-render

# JWT Configuration
JWT_SECRET=your-super-secure-production-jwt-secret-at-least-64-characters-long
JWT_EXPIRY=7d

# Redis Configuration
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password

# Email Configuration (Production)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@ai-fitness-coach.com

# External API Keys (Production)
OPENAI_API_KEY=your-production-openai-api-key
NUTRITIONIX_API_KEY=your-production-nutritionix-api-key
NUTRITIONIX_APP_ID=your-production-nutritionix-app-id

# Mobile App (Expo)
EXPO_PUBLIC_API_URL=https://ai-fitness-api.onrender.com
EXPO_PUBLIC_NOTIFICATION_URL=https://ai-fitness-notifications.onrender.com

# Web App (Next.js)
NEXT_PUBLIC_API_URL=https://ai-fitness-api.onrender.com/api
NEXT_PUBLIC_NOTIFICATION_URL=https://ai-fitness-notifications.onrender.com

# Landing Page
VITE_API_URL=https://ai-fitness-admin-api.onrender.com

# Logging
LOG_LEVEL=info

# File Storage (Production - using cloud storage)
STORAGE_TYPE=azure
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER=ai-fitness-coach-files

# Push Notifications (Production)
FCM_SERVER_KEY=your-production-fcm-server-key
APNS_KEY_ID=your-production-apns-key-id
APNS_TEAM_ID=your-production-apns-team-id

# Security
ALLOWED_ORIGINS=https://ai-fitness-coach.vercel.app,https://kaplayan-atakan.github.io
CORS_ENABLED=true

# Monitoring
APPLICATION_INSIGHTS_KEY=your-application-insights-key
SENTRY_DSN=your-sentry-dsn
