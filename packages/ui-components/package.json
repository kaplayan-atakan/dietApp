{
  "name": "@ai-fitness/ui-components",
  "version": "1.0.0",
  "description": "Shared UI components for React and React Native",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "scripts": {
    "build": "tsc",
    "build:web": "tsc --project tsconfig.web.json",
    "build:native": "tsc --project tsconfig.native.json",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-native": "^0.72.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.323.0",    "lucide-react-native": "^0.323.0",
    "@ai-fitness/shared-types": "*",
    "@ai-fitness/utils": "*"
  },
  "devDependencies": {
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@types/react-native": "^0.72.0",
    "typescript": "^5.4.2",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@storybook/react": "^7.6.17",
    "@storybook/react-vite": "^7.6.17",
    "storybook": "^7.6.17"
  }
}
